<!-- app/views/student_courses_taken/show.html.erb -->
<h1>Student Courses Taken</h1>
<div class = "studentCoursesTakenDisplay">
<% if current_user.student_courses_takens.present? %>
   <!-- display all courses taken in a table -->
  <table>
    <thead>
      <tr>
        <th>Course</th>
        <th>Grade</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% current_user.student_courses_takens.each do |course| %>
        <tr>
          <td><%= course.course %></td>
          <td><%= course.grade %></td>
          <td><%= link_to "Edit", student_courses_taken_edit_path(course.id) %> </td>
          <td><%= link_to "Delete", student_courses_taken_delete_path(course.id), data: { turbo_method: :delete },
              onclick: "return confirm('Are you sure you want to delete this course?');" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No courses taken.</p>
<% end %>
<p> <%= link_to "Add previously taken courses", student_courses_taken_new_path%> </p>
</div>